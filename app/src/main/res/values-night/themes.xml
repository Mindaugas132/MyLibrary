<resources>
    <!-- Style for a dark theme variant -->
    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">@color/colorBlack</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorSecondary">@color/colorBlue</item>
        <item name="colorSecondaryVariant">@color/colorBlueDark</item>
        <item name="colorOnSecondary">@color/colorWhite</item>

        <!-- Background and texts-->
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

</resources>